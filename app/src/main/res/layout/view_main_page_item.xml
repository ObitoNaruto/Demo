<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:background="@drawable/view_main_page_item_bg">

    <ImageView
        android:id="@+id/iv_scenery"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="74dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/iv_scenery"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="top"
            android:singleLine="true"
            android:text="顶部标题"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_middle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/tv_top"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="中间描述"
            android:textColor="#888888"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_middle"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="2016-05-27 23:30:59"
            android:textColor="#888888"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_download"
        android:layout_width="52dp"
        android:layout_height="24dp"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="下载"
        android:textColor="#f66268"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
